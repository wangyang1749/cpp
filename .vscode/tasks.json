{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build cpp",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-o",
                "build/${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build hello world",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-I",
                "D:/opencv/install/opencv/build/include",
                "-o",
                "build/${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build opencv",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-o",
                "build/${fileBasenameNoExtension}.exe",
                "${file}",
                "-I",
                "build/include",
                "-static",
                "build/lib/libopencv_world411.lib"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "build opencv and run",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-o",
                "build/${fileBasenameNoExtension}.exe",
                "${file}",
                "-I",
                "build/include",
                "-static",
                "build/lib/libopencv_world411.lib",
                ";",
                "build/${fileBasenameNoExtension}.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "build OpenGL and run",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-o",
                "build/${fileBasenameNoExtension}.exe",
                "${file}",
                "-I",
                "build/include",
                "-static",
                "build/lib/OpenGL32.Lib",
                "build/lib/GlU32.Lib",
                "build/lib/libfreeglut.dll.a",
                ";",
                "build/${fileBasenameNoExtension}.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "build OpenGL",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-o",
                "build/${fileBasenameNoExtension}.exe",
                "${file}",
                "-I",
                "build/include",
                "-static",
                "build/lib/OpenGL32.Lib",
                "build/lib/GlU32.Lib",
                "build/lib/libfreeglut.dll.a"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "build run",
            "type": "shell",
            "command": "build/${fileBasenameNoExtension}.exe",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}